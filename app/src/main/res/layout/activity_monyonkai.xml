<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_your_monster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.wcs.monsterwiki.YourMonster"
    android:background="@drawable/blanc">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Monster"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/textViewType"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStamina"
        android:layout_alignBaseline="@+id/textViewLifetime"
        android:layout_alignBottom="@+id/textViewLifetime"
        android:layout_alignStart="@+id/imageView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewForce"
        android:layout_marginBottom="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView4" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logo"
        android:layout_alignTop="@+id/Monster"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_stamina"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/textViewForce"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textViewLifetime"
        android:id="@+id/linearLayout"></LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_power"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textViewType"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginStart="29dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVitesse"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_speed"
        android:id="@+id/imageView4"
        android:layout_marginStart="50dp"
        android:layout_above="@+id/textViewForce"
        android:layout_toEndOf="@+id/textViewVitesse"
        android:layout_marginBottom="32dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewType"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/imageView4"
        android:layout_toEndOf="@+id/logo"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLifetime"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView3"
        android:layout_marginEnd="9dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_life"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

</RelativeLayout>